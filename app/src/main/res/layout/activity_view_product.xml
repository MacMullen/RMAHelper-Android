<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".ViewProductActivity">

	<androidx.appcompat.widget.Toolbar
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/white"
			android:theme="@style/ToolbarStyleWhite"
			android:minHeight="?attr/actionBarSize" android:id="@+id/viewProductToolbar"
			app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"/>
	<ImageView
			android:layout_width="30dp"
			android:layout_height="30dp" app:srcCompat="@drawable/edit_icon"
			android:id="@+id/editIcon"
			app:layout_constraintTop_toTopOf="@+id/viewProductToolbar"
			app:layout_constraintBottom_toBottomOf="@+id/viewProductToolbar"
			app:layout_constraintEnd_toEndOf="@+id/viewProductToolbar" android:layout_marginEnd="16dp"/>
	<ImageView
			android:layout_width="30dp"
			android:layout_height="30dp" app:srcCompat="@drawable/delete_icon"
			android:id="@+id/deleteIcon" android:layout_marginTop="8dp"
			app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
			app:layout_constraintBottom_toBottomOf="@+id/viewProductToolbar"
			app:layout_constraintEnd_toStartOf="@+id/editIcon" android:layout_marginEnd="24dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>