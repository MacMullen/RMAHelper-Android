<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent" app:cardUseCompatPadding="false"
		android:layout_height="88dp"
		app:cardCornerRadius="0dp">
	<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/relativeLayout">
		<ImageView android:layout_width="40dp" android:layout_height="40dp" android:padding="2dp"
		           android:id="@+id/iconView"
		           tools:layout_conversion_wrapWidth="40"
		           tools:layout_conversion_wrapHeight="40"
		           android:layout_marginStart="16dp"
		           app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
		           app:layout_constraintTop_toTopOf="parent" android:tint="@color/icon_grey"/>
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Line 1"
				android:textSize="16dp"
				android:id="@+id/modelText" app:layout_constraintTop_toTopOf="parent"
				tools:layout_conversion_wrapWidth="143"
				tools:layout_conversion_wrapHeight="71"
				android:layout_marginTop="16dp" app:layout_constraintStart_toEndOf="@+id/iconView"
				android:layout_marginStart="16dp" android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Some longer test"
				android:textSize="12dp"
				android:id="@+id/brandText"
				tools:layout_conversion_wrapWidth="143"
				tools:layout_conversion_wrapHeight="71"
				android:textAppearance="@style/TextAppearance.AppCompat.Display1"
				app:layout_constraintStart_toEndOf="@+id/iconView" android:layout_marginStart="16dp"
				android:layout_marginTop="38dp" app:layout_constraintTop_toTopOf="parent"/>
	</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>